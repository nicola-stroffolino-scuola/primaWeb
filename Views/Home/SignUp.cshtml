@model User
@{
    ViewData["Title"] = "Sign Up";
}

<div class="text-center w-50 mx-auto">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <form class="w-75 mx-auto" method="post" asp-action="Confirm">
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Name" class="w-25 text-end">Name</label>
            <div class="w-75">
                <input asp-for="Name" placeholder="example" class="form-control w-75 mx-auto" value="" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Surname" class="w-25 text-end">Surname</label>
            <div class="w-75">
                <input asp-for="Surname" placeholder="example" class="form-control w-75 mx-auto" value="" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Email" class="w-25 text-end">Email</label>
            <div class="w-75">
                <input asp-for="Email" placeholder="example@domain.com" class="form-control w-75 mx-auto" value="" type="email" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Gender" class="w-25 text-end">Gender</label>
            <div class="d-flex justify-content-evenly w-75 flex-wrap">
                <div>
                    <input value="0" asp-for="Gender" class="form-check-input" type="radio" name="gender-radio" id="male" required> 
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div>
                    <input value="1" asp-for="Gender" class="form-check-input" type="radio" name="gender-radio" id="female" required> 
                    <label class="form-check-label" for="female">Female</label>
                </div>
                <div>
                    <input value="2" asp-for="Gender" class="form-check-input" type="radio" name="gender-radio" id="null" required> 
                    <label class="form-check-label" for="null">Prefer not to Answer</label>
                </div>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="DateOfBirth" class="w-25 text-end">Date of Birth</label>
            <div class="w-75">
                <input asp-for="DateOfBirth" class="form-control w-75 mx-auto" type="date" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Role" class="w-25 text-end">Role</label>
            <div class="w-75">
                <select asp-for="Role" class="form-select w-75 mx-auto" required>
                    <option value="" selected>Select Role</option>
                    <option value="0">Student</option>
                    <option value="1">Teacher</option>
                    <option value="2">Parent</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-25 mb-2">Sign Up</button>
    </form>
</div>
