@model Prenotazione
@{
    ViewData["Title"] = "Prenota";
    
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form class="m-2" method="post" asp-action="Prenota">
        <div class="form-group">
            <label asp-for="Nome" class="w-25 m-2">Inserisci il tuo nome:</label>    
            <input asp-for="Nome" placeholder="example" class="form-control w-25 mx-auto mb-2" value="">
        </div>
        <div class="form-group">
            <label asp-for="Email" class="w-25 mb-2">Inserisci il tuo indirizzo email:</label>    
            <input asp-for="Email" placeholder="example@domain.com" class="form-control w-25 mx-auto mb-2" value="">
        </div>
        <button type="submit" class="btn btn-primary">Prenota</button>
    </form>
    @if(Model != null) {
        <p>Prenotazione effetuata con successo a nome di @Model.Nome (@Model.Email)</p>
    }   
</div>
