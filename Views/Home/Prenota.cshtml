@model Prenotazione
@{
    ViewData["Title"] = "Prenota";
    
}

<div class="text-center w-50 mx-auto">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <form class="w-75 mx-auto" method="post" asp-action="Prenota">
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Nome" class="w-25 text-end">Nome</label>
            <div class="w-75">
                <input asp-for="Nome" placeholder="example" class="form-control w-75 mx-auto" value="" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Cognome" class="w-25 text-end">Cognome</label>
            <div class="w-75">
                <input asp-for="Cognome" placeholder="example" class="form-control w-75 mx-auto" value="" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Email" class="w-25 text-end">Email</label>
            <div class="w-75">
                <input asp-for="Email" placeholder="example@domain.com" class="form-control w-75 mx-auto" value="" type="email" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Sesso" class="w-25 text-end">Sesso</label>
            <div class="d-flex justify-content-evenly w-75 flex-wrap">
                <div>
                    <input value="0" asp-for="Sesso" class="form-check-input" type="radio" name="gender-radio" id="male" required> 
                    <label class="form-check-label" for="male">Maschio</label>
                </div>
                <div>
                    <input value="1" asp-for="Sesso" class="form-check-input" type="radio" name="gender-radio" id="female" required> 
                    <label class="form-check-label" for="female">Femmina</label>
                </div>
                <div>
                    <input value="2" asp-for="Sesso" class="form-check-input" type="radio" name="gender-radio" id="null" required> 
                    <label class="form-check-label" for="null">Non Mi Esprimo</label>
                </div>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="DataDiNascita" class="w-25 text-end">Data di Nascita</label>
            <div class="w-75">
                <input asp-for="DataDiNascita" class="form-control w-75 mx-auto" type="date" required>
            </div>
        </div>
        <div class="form-group d-flex align-items-center justify-content-center mb-2">
            <label asp-for="Ruolo" class="w-25 text-end">Ruolo</label>
            <div class="w-75">
                <select asp-for="Ruolo" class="form-select w-75 mx-auto" required>
                    <option value="" selected>Seleziona Ruolo</option>
                    <option value="0">Studente</option>
                    <option value="1">Prof</option>
                    <option value="2">Genitore</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-25 mb-2">Prenota</button>
    </form>
    @if(Model != null) {
        <div class="alert alert-success w-75 mx-auto" role="alert">
            Prenotazione effetuata con successo:
            <ul class="list-group w-75 mx-auto my-2">
                <li class="input-group bg-transparent d-flex ">
                    <span class="input-group-text w-50">Nome</span>
                    <input class="input-group-text w-50 bg-light text-start" value="@Model.Nome" readonly>
                </li>
                <li class="input-group bg-transparent d-flex">
                    <span class="input-group-text w-50">Cognome</span>
                    <input class="input-group-text w-50 bg-light text-start" value="@Model.Cognome" readonly>
                </li>
                <li class="input-group bg-transparent d-flex">
                    <span class="input-group-text w-50">Email</span>
                    <input class="input-group-text w-50 bg-light text-start" value="@Model.Email" readonly>
                </li>
                <li class="input-group bg-transparent d-flex">
                    <span class="input-group-text w-50">Sesso</span>
                    <input class="input-group-text w-50 bg-light text-start" value="@Model.GetSesso()" readonly>
                </li>
                <li class="input-group bg-transparent d-flex">
                    <span class="input-group-text w-50">Data di Nascita</span>
                    <input class="input-group-text w-50 bg-light text-start" value="@Model.DataDiNascita" readonly>
                </li>
                <li class="input-group bg-transparent d-flex">
                    <span class="input-group-text w-50">Ruolo</span>
                    <input class="input-group-text w-50 bg-light text-start" value="@Model.GetRuolo()" readonly>
                </li>
            </ul>
        </div>
    }   
</div>
